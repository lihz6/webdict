{
  "manifest_version": 2,
  "name": "webdict",
  "description": "webdict - Play with Chrome",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "static/icon19.png",
    "default_popup": "popup.html",
    "default_title": "Your Profile"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "<all_urls>",
    "contextMenus",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "static/icon16.png",
    "32": "static/icon32.png",
    "48": "static/icon48.png",
    "128": "static/icon128.png"
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": [
      "content.js"
    ]
  }],
  "content_security_policy": "script-src 'self' https://hm.baidu.com https://ssl.google-analytics.com; object-src 'self'"
}
